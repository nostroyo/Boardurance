# ===========================================
# Backend Environment Configuration Example
# ===========================================
# Copy this file to .env and update with your actual values
# DO NOT commit .env files with real secrets to version control

# Application Configuration
APP_ENVIRONMENT=local
APP_APPLICATION__PORT=3000
APP_APPLICATION__HOST=0.0.0.0
APP_APPLICATION__BASE_URL=http://127.0.0.1:3000

# Database Configuration
APP_DATABASE__HOST=localhost
APP_DATABASE__PORT=27017
APP_DATABASE__DATABASE_NAME=rust_backend
APP_DATABASE__USERNAME=rust_app
APP_DATABASE__PASSWORD=your_secure_password_here
APP_DATABASE__REQUIRE_SSL=false

# JWT Configuration (Generate secure random strings for production)
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
JWT_ACCESS_TOKEN_EXPIRY=3600
JWT_REFRESH_TOKEN_EXPIRY=604800

# Session Configuration
SESSION_TIMEOUT=3600

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Logging Configuration
RUST_LOG=info
RUST_BACKTRACE=1

# Development/Testing
TEST_DATABASE_URL=mongodb://localhost:27017/rust_backend_test